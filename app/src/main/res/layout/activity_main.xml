<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo_ctrujillo" />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register Client"
            android:id="@+id/btnRegisterClient"
            android:background="@drawable/style_button"
            />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="List Clients"
            android:id="@+id/btnListClients"
            android:layout_gravity="center_vertical"
            android:background="@drawable/style_button"
            />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Positions List"
            android:id="@+id/btnPositionsList"
            android:background="@drawable/style_button"
            />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Cliente"
            android:id="@+id/btnEliminar"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/style_button"
            />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send Visits"
            android:id="@+id/btnSendVisits"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/style_button"
            />

        <Button
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update  Database"
            android:id="@+id/btnUpdateDataBase"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/style_button"
            />


    </LinearLayout>
</RelativeLayout>